<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vitamincode03.demoweb.mapper.ClassroomMapper">
    <!-- Các phần tử SQL sẽ nằm ở đây -->
    <resultMap id="ClassroomResultMap" type="Classroom">
        <id column="id" property="id" />
        <result column="name" property="name"/>
        <result column="description" property="description"/>
    </resultMap>

    <select id="findAll" resultMap="ClassroomResultMap">
        SELECT id
             , name
             , description
        FROM classroom
    </select>

    <select id="findById" resultMap="ClassroomResultMap" parameterType="integer">
        SELECT id
             , name
             , description
        FROM classroom
        WHERE id = #{classID}
    </select>

    <insert id="insert">
        INSERT INTO CLASSROOM (
                                NAME
                              , DESCRIPTION
        ) VALUES (
                   #{name}
                 , #{description}
                 )
    </insert>

</mapper>
